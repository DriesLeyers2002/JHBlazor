@page "/add-user-dialog"
@using Jeugdhuis.Models
@inject DialogService DialogService

<RadzenFieldset Text="Voeg Nieuwe Gebruiker Toe">
    <EditForm Model="@user" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />

        <RadzenRow Gap="2rem" RowGap="2rem">
            <RadzenColumn Size="12" SizeMD="6">
                <RadzenTextBox @bind-Value="user.FirstName" Placeholder="Voornaam" Style="width: 100%;" />
                <ValidationMessage For="@(() => user.FirstName)" />
            </RadzenColumn>

            <RadzenColumn Size="12" SizeMD="6">
                <RadzenTextBox @bind-Value="user.LastName" Placeholder="Achternaam" Style="width: 100%;" />
                <ValidationMessage For="@(() => user.LastName)" />
            </RadzenColumn>

            <RadzenColumn Size="12" SizeMD="6">
                <RadzenTextBox @bind-Value="user.Email" type="email" Placeholder="Email" Style="width: 100%;" />
                <ValidationMessage For="@(() => user.Email)" />
            </RadzenColumn>

            <RadzenColumn Size="12" SizeMD="6">
                <RadzenTextBox @bind-Value="user.Address" Placeholder="Adres" Style="width: 100%;" />
                <ValidationMessage For="@(() => user.Address)" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow Style="margin-top: 20px;">
            <RadzenColumn Size="6">
                <RadzenButton Text="Opslaan" ButtonType="ButtonType.Submit" Style="width: 100%;" />
            </RadzenColumn>
            <RadzenColumn Size="6">
                <RadzenButton Text="Annuleren" Click="CloseDialog" ButtonType="ButtonType.Button" Style="width: 100%;" />
            </RadzenColumn>
        </RadzenRow>
    </EditForm>
</RadzenFieldset>

@code {
    private User user = new User();

    private void HandleValidSubmit()
    {
        DialogService.Close(user);
    }

    private void CloseDialog()
    {
        DialogService.Close(null);
    }
}
